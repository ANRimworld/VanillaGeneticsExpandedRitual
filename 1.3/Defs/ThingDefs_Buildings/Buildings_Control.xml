<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>GR_AnimalControlHub</defName>
		<label>animal control hub</label>
		<canOverlapZones>false</canOverlapZones>
		<minifiedDef>MinifiedThing</minifiedDef>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<thingClass>Building_WorkTable</thingClass>
		<description>Once the animal control hub is active in any map, you can access new abilities in your hybrids, allowing you to control them directly. This hub has a very long range, and it will affect all your controllable animals in the planet.</description>
		<graphicData>
			<texPath>Things/Building/GR_AnimalControlHub</texPath>
			<graphicClass>Graphic_Single</graphicClass>    
			<drawSize>(2,4)</drawSize>	
		</graphicData>
		<rotatable>false</rotatable>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
			<GR_OrganicPulp>2</GR_OrganicPulp>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Mass>120</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-8</Beauty>
		</statBases>
		<size>(2,4)</size>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>False</hasInteractionCell>
		<surfaceType>Item</surfaceType>
		<comps>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="GeneticRim.CompProperties_AnimalControlHub"/>
		</comps>
		<researchPrerequisites>
			<li>GR_AnimalControl</li>
		</researchPrerequisites>
		<designationCategory>GR_GeneticsTab</designationCategory>
	</ThingDef>





</Defs>